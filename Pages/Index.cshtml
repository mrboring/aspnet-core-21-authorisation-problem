@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<br>

User.IsInRole("Admin"): @if (User.IsInRole("Admin"))
{
    <span>True</span>
}
else
{
    <span>False</span>
}

<br>
<br>

<p>User's roles using GetRolesAsync:</p>
<ul>
@if (User.Identity.Name != null)
{
    @if (Model.Roles != null)
    {
        @foreach(string role in Model.Roles)
        {
            <li>@role</li>
        }
    }
    else
    {
        <li>None</li>
    }
}
else
{
    <li>Log in to see roles</li>
}
</ul>


